FROM node:20-alpine AS builder

WORKDIR /app

COPY package*.json ./
RUN npm ci

COPY . .

RUN npm run build

FROM node:20-alpine

WORKDIR /app

RUN npm i -g serve@latest

COPY --from=builder /app/dist /app/dist

EXPOSE 80

# Simple static server for the SPA (no nginx)
CMD ["serve", "-s", "dist", "-l", "80"]
